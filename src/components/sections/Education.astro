---
import Section from "@/components/Section.astro"

const { cv: { education } } = Astro.props
const { title, titles } = education
---

<Section title={title}>
  <ul>
    {titles.map((item: any) => {
      const years = `${item.startDate} - ${item.endDate}`

      return (
        <li>
          <article>
            <header>
              <div>
                <h3>{item.institution}</h3>
              </div>
              <time>{years}</time>
            </header>

            <footer>
              <p>{`${item.studyType} ${item.area}`}</p>
            </footer>
          </article>
        </li>
      )
    })}
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  article h3 {
    color: #111;
    font-weight: 500;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }
  time {
    font-size: 0.9rem;
    color: #666;
  }

  footer {
    margin-top: 5px;
  }
  footer p {
    color: #555;
  }

  @media only screen and (max-width: 700px) {
    h3 {
      max-width: 194px;
    }
  }
</style>

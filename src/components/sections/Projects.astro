---
import Section from "@/components/Section.astro"
import type { CV } from "@/types.ts"
interface Props {
  cv: CV
}

const { cv: { projects } } = Astro.props
const { title, project } = projects
---

<Section title={title}>
  <ul>
    {project.map(({name, description, highlights, url}) => (
      <li>
        <article>
          <header>
          <a href={url} title={`Ver ${name}`}>
            <h3>{name}</h3>
          </a>
          <p>{description}</p>
          </header>
          <footer>
            {highlights.map((item: string) => (
              <span>{item}</span>
            ))}
          </footer>
        </article>
      </li>
    ))}
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns:  repeat(
      auto-fit,
      minmax(200px, 1fr)
    );
    gap: 1rem;
  }
  article {
    border-radius: 6px;
    border: 1px solid #dddeee;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }
  header {
    flex: 1;
  }

  h3 {
    margin-bottom: 5px;
  }

  a {
    color: #222;
  }

  a:hover {
    text-decoration: underline;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.8rem;
    justify-content: flex-start;
    width: 100%;
  }

  footer span {
    border: 1px solid #dddeee;
    border-radius: 8px;
    background-color: #dddeee;
    color: #222;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>